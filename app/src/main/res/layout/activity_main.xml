<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:isScrollContainer="true"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="Hello , Kumaran!"
        android:textColor="@color/cyan_dark"
        android:fontFamily="@font/marget"
        android:layout_margin="10dp"/>



    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/wallet"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Balance"
        android:textSize="15dp"
        android:textStyle="bold"
        />

    <!--  Balance  -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="125"
            android:textSize="20dp"
            android:id="@+id/total_balance"
            android:textStyle="bold"/>

    </LinearLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="ADD MONEY"
        android:layout_marginTop="15dp"
        android:theme="@style/Theme.PocketAssistant"
        android:background="@drawable/btn_bg"
        android:id="@+id/add_money"/>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/add_card"
        app:cardElevation="8dp"
        android:layout_marginTop="50dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/add_amount"
                android:inputType="number"
                android:layout_gravity="center_horizontal"
                android:hint="amount"
                android:textSize="15dp"/>

            <AutoCompleteTextView
                android:id="@+id/add_source"
                android:layout_width="150dp"
                android:hint="source"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:editable="true" />

            <Button
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginRight="120dp"
                android:text="add"
                android:background="@drawable/btn_bg"
                android:id="@+id/add_done"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginTop="-40dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_bg"
                android:text="close"
                android:id="@+id/add_close"/>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="SPEND MONEY"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_bg"
        android:id="@+id/spend_money"/>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/spend_card"
        app:cardElevation="8dp"
        android:layout_marginTop="50dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">


            <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/spend_amount"
                android:inputType="number"
                android:layout_gravity="center_horizontal"
                android:hint="amount"
                android:textSize="15dp"/>

            <AutoCompleteTextView
                android:id="@+id/spend_source"
                android:layout_width="150dp"
                android:hint="source"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:editable="false" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/spend_reason"
                android:inputType="text"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:hint="reason"
                android:textSize="15dp"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginRight="120dp"
                android:text="spend"
                android:background="@drawable/btn_bg"
                android:id="@+id/spend_done"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginTop="-40dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_bg"
                android:text="close"
                android:id="@+id/spend_close"/>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:theme="@style/Theme.PocketAssistant"
        android:background="@drawable/btn_bg"
        android:text="PASSBOOK"
        android:id="@+id/passbook"/>









    

</LinearLayout>